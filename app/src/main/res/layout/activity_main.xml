<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/orange"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logoutim"
        android:layout_width="27dp"
        android:layout_height="29dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logout" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="34dp"
        android:layout_height="31dp"
        android:gravity="center"

        android:text="çıkış "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoutim" />

    <ImageView
        android:id="@+id/Info_Tw"
        android:layout_width="212dp"
        android:layout_height="176dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="100dp"
        android:backgroundTint="#E11E1E"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/kerem" />

    <TextView
        android:id="@+id/Workers_pageTw"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/custom_button"
        android:gravity="center"
        android:text="İŞÇİ TAKİP"
        android:textColor="#050505"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/SoldGoods_tw"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Fertilizier_page_tw"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/custom_button"
        android:gravity="center"
        android:text="GÜBRE VE İLAÇ"
        android:textColor="#050505"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/Advantage_damage_tw"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Advantage_damage_tw"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="88dp"
        android:background="@drawable/custom_button"
        android:gravity="center"
        android:text="KAAR ZARAR"
        android:textColor="#050505"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/SoldGoods_tw"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/custom_button"
        android:gravity="center"
        android:text="SATILAN MAL"
        android:textColor="#050505"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/Fertilizier_page_tw"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>